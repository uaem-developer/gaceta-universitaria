@import 'nib'
@import 'normalize'
@import 'fonts'
@import 'foundation'

 
body
  max-width 960px
  background url('../img/background.jpg') #cbcbcb no-repeat
  background-position top
  font-size 16px
  font-family 'Open Sans'
  margin 0 auto 
  margin-top 195px
  
  
figure
  padding 0
  margin 0
img
  max-width 100%
nav
  background black
  padding 5px 
  ul
    padding 0
    li
      display inline-block
      a
        padding 10px 15px
        color #707070
        border-radius 5px
        text-decoration none
        &:hover
          background #05a9ac
          color white
        
h1,h2
  font-family 'Oswald'
  font-weight 300
  color #333333
  
a
  text-decoration none
  color #333
  
p
  font-size .9em
  
input,select
  border 1px solid #d5dbe0
  border-radius 4px
  padding 5px
  color #d5dbe0
  font-size .8em
  max-width 100%
label
  font-weight bold
  font-size .8em

button
  border 0
  
.btn
  background #ededed
  color #666666
  border-radius 4px
  padding 5px 15px
  font-size .8em
  text-decoration none  
  
.img-box
  border 4px solid white
  box-shadow 0px 3px 5px rgba(0,0,0,0.7)

.header-text
  background white
  padding 30px 20px
  margin 30px 0
  
.header-number
  font-family 'TypewriterForMe'
  text-align right
 
.text-columns
  columns 3
  
.text-big
  font-size 130%
  
.main-content
  padding 10px
  background white  
  overflow hidden
  
.fondo-index
  background url('../img/pleca-cita.png') no-repeat
  height 320px
  color white 
  padding 100px 200px 100px 100px
  margin-top -35px
  font-size .9em
  width: 97%;
  margin: 0 auto;
  
.post-title
  border-bottom 1px solid #adadad
  overflow hidden
  margin-bottom 10px
  .gaceta-title-sub
    font-family 'Oswald'
    text-align center
    
  .gaceta-numero
    font-size 2em
    font-weight bold
    display block
    padding 5px 0 0 0
    margin-bottom 10px
    border-bottom 1px solid #adadad
  
.post-author
  color #a38ca3
  text-transform uppercase

.notas-home-destacadas
  padding 0
  background url('../img/pleca-sombra-276.png') no-repeat top center
  li
    padding 10px 0
    font-size .9em
    border-bottom 1px solid #adadad
    list-style url('../img/list-bullet.png')
    list-style-position inside
    &last-child
      border-bottom none
      
.busqueda-de-gaceta
  .control
    margin 10px 0
  input,select
    width 100%
    
.section-pleca
  padding 10px
  font-family 'TypewriterForMe'
  color white
  background black
  
.list-masleidos
  padding 0
  background url('../img/pleca-sombra-276.png') no-repeat top center
  li
    padding 20px 0
    list-style none
    border-bottom 1px solid #d3d3d3
  .title-post
    font-weight bold
  .author 
    color #a9a9a9
    font-size .7em
    text-transform uppercase 

    
    